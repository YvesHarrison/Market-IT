<div class="container">
  <hr>
  <h1 class="info-h1">Edit Your Product</h1>
  <hr>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8  col-12 jumbotron">
         <form name="eproductup" action="/products/edit/{{product.product_id}}" method="POST" id="eproductup-form" class="eproductup-form" onsubmit="return validationForm1(this.value)">
          <div class="form-group">
            <label for="eproductup-name" class="clsLabelforFields">
              Product Name:
            </label>
            <input type="text" class="form-control" id="eproductup-name" name="ep_name" placeholder="Name"
              aria-describedby="pnameHelp" value='{{product.p_name}}'>
            <span id="pnameHelp" class="form-text text-muted" style="display: none;">Please enter a valid product name.</span>
          </div>

          <div class="form-group">
            <label for="eproductup-tag" class="clsLabelforFields">
              Tag:
            </label>
            
            <input type="text" class="form-control" id="eproductup-tag" name="etags" placeholder="Tag" aria-describedby="tagHelp"
              value={{tag}}>
            <span id="tagHelp" class="form-text text-muted" style="display: none;">Please enter a valid tag.</span>
          </div>

          <div class="form-group">
            <label for="eproductup-price" class="clsLabelforFields">
              Price:
            </label>
            <input type="number" class="form-control" id="eproductup-price" name="eprice" placeholder="Price"
              aria-describedby="priceHelp" value='{{product.price}}'>
            <span id="priceHelp" class="form-text text-muted" style="display: none;">Please enter a valid price.</span>
          </div>

          <div class="form-group">
            <label for="eproductup-quantity" class="clsLabelforFields">
              Quantity:
            </label>
            <input type="number" class="form-control" id="eproductup-quantity" name="equantity" placeholder="Quantity"
              aria-describedby="quantityHelp" value='{{product.quantity}}'>
            <span id="quantityHelp" class="form-text text-muted" style="display: none;">Please enter a valid quantity.</span>
          </div>

          <div class="form-group">
            <label for="edescription" class="clsLabelforFields">
              Description:
            </label>
            <textarea rows="10" cols="100" class="form-control" id="edescription" name="ep_description" placeholder="Description you woul like to add to existing product"
              aria-describedby="descriptionHelp"></textarea>
            <span id="descriptionHelp" class="form-text text-muted" style="display: none;">Please enter a description.</span>
          </div>
          <div class="text-center">
            <button type="submit" class="gradient-button gradient-button-1" id="eproductup-button" value="{{product.product_id}}">
              Update </button>
          </div>
        </form>
        <div class="text-center">
          <div class="alert alert-danger" id="error" hidden>{{error}}</div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="../public/js/edit.js"></script>