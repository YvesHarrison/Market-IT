<div class="cntPageheader">
    <article class="input-login">
        <h1></h1>
        <br />
        <h2 class="signup-h2">Login Market IT</h2>
        <br />
        {{#if errors}}
        {{#each errors}}
        <div class="alert alert-danger"> {{msg}}</div>
        {{/each}}
        {{/if}}
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8  col-12 jumbotron cntsignupback">
                    <form name="phrase" action="/login" method="POST" id="login_form" class="login-form" onsubmit="return validation()">

                        <div class="form-group">
                            <label for="logname" class="clsformLabel">Username:</label>
                            <input type="text" class="form-control" id="logname" name="email" placeholder="Username" required>
                            <span id="match"></span>
                        </div>

                        <div class="form-group">
                            <label for="logpassword" class="clsformLabel">Password:</label>
                            <input type="password" class="form-control" id="logpassword" name="password" placeholder="Password"
                                required aria-describedby="passwordHelp">
                            <span id="passwordHelp" class="form-text text-muted" style="display: none;">Please enter a
                                valid password.</span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="gradient-button gradient-button-1" id="login-button">Log In</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </article>
    <div class="error" id="error">{{error}}</div>
    <script type="text/javascript" src="../public/js/signup.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</div>