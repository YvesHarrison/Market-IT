<div class="container">
      <hr>
      <h2>User Bio</h2>
      <hr>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8  col-12 jumbotron">
            <form>
              <div class="form-group">
                <label ><h2>Name</h2></label>
                <p class=username>{{username}}</p>
              </div>
              <div class="form-group">
                <label ><h2>ID</h2></label>
				        <p class=userid>{{userid}}</p>
              </div>
              <div class="form-group">
                <label ><h2>Email</h2></label>
				        <p class=useremail>{{useremail}}</p>
              </div>
              <div class="form-group" name="userimageform" id="userimageform">
                <label for="userimage"><h2>Upload Your Image</h2></label>
                <input type="file" id="userimage" name="userimage" accept="image/jpg, image/jpeg">
                <hr>
                <button type="submit" class="btn btn-primary" id ="userimage-button">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <hr>
</div>


          
