<div class="container">
  <hr>
  <h1 class="info-h1">User Profile</h1>
  <hr>
  <div class="container">

    <div class="row justify-content-center">
      <div class="col-lg-8 col-12 jumbotron">
        <form>
          <div class="form-group">
            <label class="clsLabelforFields">
              First Name
            </label>
            <p class="username">{{user.firstName}}</p>
          </div>

          <div class="form-group">
            <label class="clsLabelforFields">Last Name
            </label>
            <p class="username">{{user.lastName}}</p>
          </div>
          <div class="form-group">
            <label class="clsLabelforFields">Email
            </label>
            <p class="useremail">{{user.email}}</p>
          </div>
          <div class="form-group">
            <label class="clsLabelforFields">Phone
            </label>
            <p class="useremail">{{user.phone}}</p>
          </div>
          <div class="form-group" id="userimageform">
            {{!-- <p class="uploadedimages">{{products.image_name}}</p> --}}

            <hr>
            <div class="text-center">
              <input type="button" onclick="location.href='/products/productup';" value="Add Product" class="gradient-button gradient-button-1 add-product-btn" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <hr>

  {{#if postprod}}
  <hr>
  <h2>Posted Products</h2>
  <hr>
  <div class="container">
    {{#each posted_products}}
    <div class="col-sm-3">
      <div class="panel">
        <div class="panel-body posted-products">
          <div class="info-img">
            <img src="../{{this.image_path}}" alt="img">
          </div>
          <label for="info-button"></label>
          <button id="info-button" onclick="deleteTab(this,'{{this.posterId}}')" class='aui_close clsDeleteGoal pull-right'
            value={{this.product_id}}>X</button>
          <div class="info-pro-name">
            <span>
              &nbsp;{{this.p_name}}
            </span></div>
          <div class="info-pro-price">
            <span>
              &nbsp;&nbsp;${{this.price}}
            </span>
          </div>
          <br>
          <form action="../products/edit/{{this.product_id}}" method="get">
            <div class="text-center info-edit"><button value={{this.product_id}} class="btn btn-d btn-lg btn-block info-edit-btn">
                Edit
              </button></div>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <hr>
  {{/if}}
  {{#if boughtprod}}
  <hr>
  <h2>Enquired Products</h2>
  <hr>
  <div class="container">
    {{#each bought_products}}
    <div class="col-sm-3">
      <div class="panel">
        <div class="panel-body posted-products">
          {{!-- <button onclick="deleteTab(this)" class='clsDeleteGoal pull-right' value={{this.product_id}}></span></button>
          --}}
          <div class="info-pro-name">
            <span>
              {{this.p_name}}
            </span></div>
          <div class="info-pro-price">
            <span>
              ${{this.price}}
            </span></div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <hr>
  {{/if}}
</div>
<script type="text/javascript" src="../public/js/product_upload.js"></script>